{
    "compilerOptions": {
        "module": "commonjs",
        "lib": ["DOM", "ES2019"],
        "allowJs": true,
        "jsx": "react",
        "sourceMap": true,
        "strict": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictFunctionTypes": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "noImplicitThis": true,
        "alwaysStrict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,
        "downlevelIteration": true,
        "moduleResolution": "node",
        "baseUrl": "./src",
        "paths": {
            "features/*": ["features/*"],
            "config": ["config"],
            "utils": ["utils"],
            "shared": ["shared"],
            "app-state": ["app-state"],
            "layout": ["layout"],
            "urls": ["urls"],
            "pages": ["pages"],
            "routes": ["routes"]
        },
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": ["src", "custom.d.ts", "src/shared/components/CustomIcons"]
}
